@page
@model WEBII.Pages.PreRequisitos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Requisitos</h1>
@if (User.IsInRole("admin") || User.IsInRole("coordenador"))
{
    <p>
        <a asp-page="Create"><button class="btn btn-primary" style="background-color:mediumseagreen; border-color:mediumseagreen"><i class="fas fa-plus-circle"> </i> Adicionar</button></a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PreRequisito[0].Disciplina_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreRequisito[0].Disciplina_Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreRequisito[0].Requisitos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreRequisito[0].Creditos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreRequisito[0].Periodo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PreRequisito) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Disciplina_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disciplina_Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requisitos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creditos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Periodo)
            </td>
            <td>

                <a asp-page="./Details" asp-route-id="@item.Id"><button class="btn btn-primary" style="background-color:cornflowerblue; border-color:cornflowerblue"><i class="fas fa-eye"></i></button></a>
                @if (User.IsInRole("admin") || User.IsInRole("coordenador")){
                    <a asp-page="./Edit" asp-route-id="@item.Id"><button class="btn btn-primary" style="background-color:darkgoldenrod; border-color:darkgoldenrod"><i class="fas fa-edit"></i></button></a>
                    <a asp-page="./Delete" asp-route-id="@item.Id"><button class="btn btn-primary" style="background-color:red; border-color:red"><i class="far fa-trash-alt"></i></button></a>
                 }
            </td>
        </tr>
}
    </tbody>
</table>
